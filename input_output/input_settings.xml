<?xml version="1.0"?>
<main>
    <CONFIG>
        <parameter key="number_of_cores" value= "4"/>
        <parameter key="sample_number" value="96"/>
    </CONFIG>
    <QUEUE>
        <TASK class="TASK_PARALLELIZE">
        <parameters_by_value>
            <parameter key="input_path"  value="dir_to_input_folder"/>
            <parameter key="output_path" value="dir_to_output_folder"/>
            <parameter key="quantify_data_raw_path.2" value="raw//data_quantify//"/>
            <parameter key="pathway_data_path.2"  value="raw//data_pathway//"/> 
        </parameters_by_value>
        <parameters_by_name>
            <parameter key="folders_number" value="sample_number"/> 
            <parameter key="quantify_data_raw_path.1" value="output_path"/>
            <parameter key="pathway_data_path.1"  value="output_path"/> 
        </parameters_by_name>
        </TASK>
        <QUEUE>
            <TASK class="TASK_DOWNLOAD">
                <parameters_by_value>
                    <parameter key="by_url" value="FALSE"/>
                </parameters_by_value>
                <parameters_by_name>
                    <parameter key="input_path.1"  value="input_path"/>
                    <parameter key="input_path.2"  value="folder_name"/>
                    <parameter key="output_path.1" value="pathway_data_path"/>
                    <parameter key="output_path.2"  value="folder_name"/>
                </parameters_by_name>
                <update_by_value>
                </update_by_value>
                <update_by_name>
                    <update key="pathway_data_path" value = "output_path"/>
                </update_by_name>
            </TASK>
            <TASK class="TASK_QUANTIFY">
                <parameters_by_value>
                    <parameter key="pipeline" value="dir_to_pipeline"/>
                </parameters_by_value>
                <parameters_by_name>
                    <parameter key="input_path"    value="pathway_data_path"/>
                    <parameter key="output_path.1" value="quantify_data_raw_path"/> 
                    <parameter key="output_path.2"  value="folder_name"/>
                </parameters_by_name>
                <update_by_value/>
                <update_by_name/>
                <update_by_value/>
                <update_by_name>
                    <update key="quantify_data_raw_path" value="quantify_data_raw_path"/>
                    <update key="pathway_data_path" value = "pathway_data_path"/>
                </update_by_name>
            </TASK>
        </QUEUE>
        <TASK class="TASK_MERGE">
            <parameters_by_value/>
            <parameters_by_name>
                <parameter key="input_path" value = "quantify_data_raw_path"/>
                <parameter key="input_path" value = "quantify_data_raw_path"/> 
            </parameters_by_name>
            <update_by_value/>
            <update_by_name/>
        </TASK>
    </QUEUE>
</main>
